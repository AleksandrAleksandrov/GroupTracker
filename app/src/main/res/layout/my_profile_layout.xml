<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp">

    <ImageView
        android:id="@+id/my_profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="left"
        android:layout_margin="20dp"
        android:src="@drawable/profile"/>

    <TextView
        android:textSize="26sp"
        android:text="User's name"
        android:id="@+id/my_profile_fio"
        android:layout_gravity="left"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="26sp"
        android:text="User's Login"
        android:id="@+id/my_profile_login"
        android:layout_gravity="left"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="26sp"
        android:text="User's phone number"
        android:id="@+id/my_profile_phone_number"
        android:layout_gravity="left"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="26sp"
        android:text="User's email"
        android:id="@+id/my_profile_email"
        android:layout_gravity="left"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>